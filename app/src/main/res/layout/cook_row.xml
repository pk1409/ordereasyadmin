<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fna"
            android:layout_width="275dp"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Food name"

            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/cook_foodname"
            android:layout_width="278dp"
            android:layout_height="46dp"
            android:text="BabyCorn"
            android:layout_weight="1"
            />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/fqa"
        android:layout_width="81dp"
        android:layout_height="20dp"
        android:text="quantity"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/cook_foodquantity"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:text="4"
        android:layout_weight="1"
        />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cook_tno"
            android:layout_width="81dp"
            android:layout_height="20dp"
            android:text="Table NO"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/cook_tablenum"
            android:layout_width="79dp"
            android:layout_height="44dp"
            android:text="4"
            android:layout_weight="1"

            />

    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/wna"
        android:layout_width="275dp"
        android:layout_height="20dp"
        android:text="waiter name"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/cook_waitername"
        android:layout_width="284dp"
        android:layout_height="46dp"
        android:text="KumarNaman"
        android:layout_weight="1"
        />
</LinearLayout>



<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    />





</LinearLayout>